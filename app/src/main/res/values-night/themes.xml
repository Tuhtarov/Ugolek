<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryLightBlack</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantGray</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CA46C5</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantLightBlack</item>
        <item name="colorOnSecondary">#EDEDED</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color">@color/linearWood</item>
        <item name="colorOnBackground">@color/colorPurpleBorder</item>
        <item name="md_color_button_text">@color/colorBlackTextDark</item>

        <!-- Для нажатой кнопки -->
        <item name="colorAccent">#BC3FB7</item>
        <!-- Для заблокированного объекта -->
        <item name="colorOnError">#4E4E4E</item>

        <!-- Для границ фоновых объектов (page confirm activity) -->
        <item name="colorBackgroundFloating">#CE00C6</item>
        <!-- Для границ фоновых объектов (page confirm activity) -->
        <item name="colorOnSurface">@color/onSurfaceNight</item>

        <!--       Для фона кнопок диалоговых окон-->
        <item name="colorButtonNormal">@color/colorBtnNormalNight</item>
        <!--        Для фона диалоговых окон-->
        <item name="colorControlNormal">@color/colorDialogBackgroundNight</item>

    </style>
</resources>