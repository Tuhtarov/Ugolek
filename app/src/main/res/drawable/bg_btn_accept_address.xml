<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    Когда кнопка деактивирована  -->
    <item
        android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="30dp">
            </corners>

            <stroke
                android:width="1dp"
                android:color="#66707070">
            </stroke>

            <solid
                android:color="#EAE8E8">
            </solid>
        </shape>
    </item>

    <!--    Когда кнопка активирована-->
    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="30dp">
            </corners>

            <stroke
                android:width="1dp"
                android:color="#66707070">
            </stroke>

            <solid
                android:color="@color/theme_bttn">
            </solid>
        </shape>
    </item>

    <!--    Когда кнопка нажата  -->
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#78FF73" />
            <corners
                android:radius="30dp">
            </corners>
            <stroke android:color="#7CFFFFFF"
                android:width="2dp"/>
        </shape>
    </item>

</selector>