<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_light_background"
        app:cardElevation="15dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_confirmPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/russian_road"
                android:text="ПОДТВЕРЖДЕНИЕ"
                android:textStyle="bold"
                android:textSize="30sp"
                app:drawableBottomCompat="@drawable/ic_baseline_check_circle_outline_24"
                app:layout_constraintBottom_toTopOf="@+id/text_inputCodeSms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/text_inputCodeSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введите код из СМС"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="@font/russian_road"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@+id/text_confirmPhone"
                app:layout_constraintBottom_toTopOf="@+id/field_inputCodeSms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </TextView>

            <EditText
                android:id="@+id/field_inputCodeSms"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:background="@drawable/bg_btn_dialog"
                android:hint="----"
                android:textAlignment="center"
                android:inputType="number"
                android:textSize="35sp"
                android:maxLength="4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_inputCodeSms">

            </EditText>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>