<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="25dp"
    android:background="@drawable/dialog_page_background"
    android:elevation="2dp"
    android:translationZ="1dp">

    <TextView
        android:id="@+id/icon_confirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/txt_solid"
        android:text=""
        android:textColor="?colorAccent"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/order_confirmed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_confirmed"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/russian_road"
        android:text="Ваш заказ подтверждён\n
ожидайте звонка оператора."
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/btn_code_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_confirmed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_code_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dialog_background"
        android:elevation="10dp"
        android:fontFamily="@font/russian_road"
        android:text="ОК"
        android:textColor="?colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_confirmed" />

</androidx.constraintlayout.widget.ConstraintLayout>
