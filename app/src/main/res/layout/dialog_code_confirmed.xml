<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/field_background">

            <TextView
                android:id="@+id/icon_confirmed"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="?colorAccent"
                android:layout_marginHorizontal="130dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:fontFamily="@font/txt_solid"
                app:layout_constraintBottom_toTopOf="@+id/order_confirmed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/order_confirmed"
                android:text="Ваш заказ подтверждён\n
ожидайте звонка оператора."
                android:textAlignment="center"
                android:fontFamily="@font/russian_road"
                android:textSize="22sp"
                style="@style/textStyle"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/btn_code_ok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_confirmed"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_code_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/russian_road"
                android:background="@drawable/btn_dialog_background"
                android:text="ОК"
                android:textColor="?colorOnSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_confirmed"
                >

            </androidx.appcompat.widget.AppCompatButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>