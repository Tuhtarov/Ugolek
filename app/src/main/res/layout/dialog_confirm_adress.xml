<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#F9F9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_confirm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/field_adressConfirm"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Подтвердите \nвыбранный адресс"
                android:textAlignment="center"
                android:fontFamily="@font/russian_road"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/field_adressConfirm"
                android:layout_width="match_parent"
                android:background="@drawable/bg_field_dialog_confirm_address"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/text_confirm"
                app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:hint="Адрес"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_margin="10dp"
                android:paddingHorizontal="10dp"
                android:textSize="22sp"
                android:elevation="20dp"
                >

            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:gravity="center"
                android:background="@drawable/bg_btn_accept"
                app:layout_constraintTop_toBottomOf="@+id/field_adressConfirm"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/text_accept"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:padding="12dp"
                android:layout_margin="20dp"
                android:fontFamily="@font/russian_road"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_baseline_check_24"
                app:layout_constraintEnd_toStartOf="@id/btn_cancel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_cancel"
                android:backgroundTint="@color/theme_bttn"
                android:fontFamily="@font/txt_solid"
                android:text=""
                android:gravity="center"
                android:padding="12dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@id/btn_confirm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_confirm"
                app:layout_constraintTop_toTopOf="@id/btn_confirm" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>