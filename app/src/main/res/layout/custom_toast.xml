<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toast_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/field_background"
    android:elevation="7dp"
    android:orientation="vertical"
    android:translationZ="2sp">

    <TextView
        android:id="@+id/text_custom_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        tools:text="Сначала выберите поставщика!" />

    <TextView
        android:id="@+id/icon_custom_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/txt_solid"
        android:textColor="?colorError"
        android:textSize="22sp"
        tools:text="@string/symbol_cancel" />

</LinearLayout>