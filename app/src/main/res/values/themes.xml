<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantWhite</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryLightGreen</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantBlackGray</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color">@color/linearBlack</item>
        <item name="colorOnBackground">@color/colorGreenBorder</item>
        <item name="md_color_button_text">@color/colorBlackTextLight</item>

        <!-- Для нажатой кнопки -->
        <item name="colorAccent">#8AE483</item>
        <!-- Для заблокированного объекта -->
        <item name="colorOnError">#E8E8E8</item>
    </style>
</resources>